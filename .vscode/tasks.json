{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Typescript Compiler",
      "type": "shell",
      "args": ["-c", "node_modules/.bin/tsc --noEmit"],
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Typescript Compiler (in watch mode)",
      "type": "shell",
      "args": ["-c", "node_modules/.bin/tsc --watch --noEmit"],
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "group": "build"
    }
  ]
}
